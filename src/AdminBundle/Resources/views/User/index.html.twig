{% extends 'AdminBundle::layout.html.twig' %}

{% block body -%}
    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="page-header">
                        Users list
                    </h1>
                </div>
            </div>


            <!-- /. ROW  -->

            <div class="row">
                <div class="col-md-12">
                    <!-- Advanced Tables -->
                    <div class="panel panel-default">
                        <div class="panel-body">

                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Email</th>
                                        <th>Username</th>
                                        <th>Name</th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody>

                                    {% for entity in entities %}
                                        <tr class="{% if loop.index is odd %}odd{% else %}even{% endif %}">
                                            <td>
                                                <a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.id }}</a>
                                            </td>
                                            <td>{{ entity.email }}</td>
                                            <td>{{ entity.username }}</td>
                                            <td class="center">{{ entity.firstname }} {{ entity.lastname }}</td>
                                            <td>
                                                <ul>
                                                    <li>
                                                        <a href="{{ path('admin_user_show', { 'id': entity.id }) }}">show</a>
                                                    </li>
                                                    <li>
                                                        <a href="{{ path('admin_user_edit', { 'id': entity.id }) }}">edit</a>
                                                    </li>
                                                </ul>
                                            </td>
                                        </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                            <a href="{{ path('admin_user_new') }}">
                                Create a new user
                            </a>
                        </div>
                    </div>
                    <!--End Advanced Tables -->
                </div>
            </div>
            <!-- /. ROW  -->

            <footer></footer>
        </div>
        <!-- /. PAGE INNER  -->
    </div>

